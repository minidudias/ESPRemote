<hibernate-configuration>
<session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/espremote?useSSL=false</property>
        <property name="hibernate.connection.username">root</property>    <!-- generally "root" -->
        <property name="hibernate.connection.password">20030130md</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <!-- map java beans below this using, <mapping class=""/> tags -->
        <mapping class="entity.Stopping"/>
</session-factory>
</hibernate-configuration>